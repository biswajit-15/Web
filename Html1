----------------------------------------------------------------------------------promis2------------------------------------------------------------------------------------
////////////////index.js///////////////////////
"use strict";

const { promises: fs } = require("fs");
const utils = require("./functions");

async function main() {
    try {
        const [empData, bonusData] = await Promise.all([
            fs.readFile("employees.json", "utf8"),
            fs.readFile("bonuses.json", "utf8"),
        ]);

        const employees = JSON.parse(empData);
        const bonuses = JSON.parse(bonusData);

        const bonused = utils.getBonusedEmployees(employees, bonuses);
        const json = JSON.stringify(bonused, null, 2);

        await fs.writeFile("./output/bonusedEmployees.json", json);
        await fs.writeFile("./output/log.txt", json);

        console.log("✓ Done. Check output folder.");
    } catch (error) {
        console.error("Error:", error.message);
    }
}

main();
////////////////////////functions.js/////////////////////////////////
module.exports.getBonusedEmployees = function (employees, bonuses) {
    return employees.map(emp => {
        const bonus = bonuses[emp.id] || 0;
        return {
            ...emp,
            bonus
        };
    });
};
